@model WebApp.Models.SuiteСhord
<input type="hidden" id="NextId" value="@ViewBag.NextId" />
<br />
<h4>Song : @Model.Name 
    @Html.ActionLink("Edit", "UpdateSong", "Song", new { id = Model.SuiteСhordId }, new { @class = "btn btn-primary" })</h4>
<p>@Model.CountViews Count Views</p>
@if (Model.Singer != null)
{
    <h4>Singer : @Model.Singer.Name</h4>
}
<div class="row positions_cont" id="1" style="display:block">
    <div class="span5 songtext">
        <pre>@Model.Text</pre>

        @if (Model.Video != null)
        {
            <br />
                    <h2>Video:</h2>
                        <br />
                        <object style="float: none; clear: both; margin: 2px auto;" data="@Url.Content(Model.Video)" width="560" height="315"></object>
        }
    </div>
    <div class="span6 chords">
        <h3>Аппликатуры аккордов</h3>
        <div id="song_chords">
            @if (Model.Fingerings.Count != 0)
            {
                foreach (var s in Model.Fingerings)
                {
                    <img src="@Url.Content(s.Picture)" />
                }
            }
        </div>
    </div>
</div>


